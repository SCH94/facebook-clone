<div class="container theme-showcase body" role="main">
  <div class="row signup-area">
    <div class="col-sm-7 cta">
      <p class="signup-description">Fakebook helps you connect and share with the people in your life.</p>
      <%= image_tag "signup-image.png", class: "signup-image" %>
    </div>
    <div class="col-sm-5">
      <h1>Create an account</h1>
      <h4>It's free and always will be.</h4>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <div class="row">
            <div class="col-sm-6">
              <%= f.text_field :name, class: "form-control", placeholder: "First name" %>
            </div>
            <div class="col-sm-6">
              <%= f.text_field :surname, class: "form-control", placeholder: "Surname" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.text_field :email, class: "form-control", placeholder: "Mobile number or email address" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: "form-control", placeholder: "New password" %>
        </div>
        <div class="radio">
          <%= f.radio_button(:gender, "Female") %>
          <%= f.label(:gender_female, "Female") %>
          <%= f.radio_button(:gender, "Male") %>
          <%= f.label(:gender_male, "Male") %>
        </div>
        <div class="form-group">
          <%= f.submit "Create an account", class: "btn btn-info btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

